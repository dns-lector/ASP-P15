@using System.Security.Claims
@{
    bool isAuthenticated = Context.User.Identity?.IsAuthenticated ?? false;
    String? avatar = Context
        .User
        .Claims
        .FirstOrDefault(c => c.Type == ClaimTypes.UserData)
        ?.Value;
    bool hasAvatar = ! String.IsNullOrEmpty(avatar);
    char avatarLetter = (
        Context.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name) ??
        Context.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Email)
    )?.Value.ToUpper()[0] ?? 'A';
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP-P15</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP-P15.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ASP_P15</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    @if (isAuthenticated)
                    {
                        <a asp-controller="Shop" asp-action="Cart" class="btn btn-outline-secondary mx-2 a-no-underline">
                            <i class="bi bi-bag-plus"></i>
                        </a>
                        <a asp-controller="Home" asp-action="Profile" class="a-no-underline">
                            @if (hasAvatar)
                            {
                                <img class="avatar" src="/Home/Download/@(avatar)" alt="avatar"/>
                            }
                            else
                            {
                                <b class="no-avatar">@avatarLetter</b>
                            }
                        </a>
                        <button id="log-out-button" type="button" class="btn btn-outline-secondary mx-2" >
                            <i class="bi bi-box-arrow-left"></i>
                        </button>
                    }
                    else
                    {
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-outline-secondary mx-2" data-bs-toggle="modal" data-bs-target="#authModal">
                            <i class="bi bi-box-arrow-in-right"></i>
                        </button>
                        <a asp-action="SignUp" title="Реєстрація" class="btn btn-outline-secondary"><i class="bi bi-plus-square"></i></a>
                    }
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ASP_P15 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    <!-- Modal -->
    <div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="authModalLabel">Автентифікація</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="auth-email-addon"><i class="bi bi-at"></i></span>
                            <input type="text"
                                   class="form-control"
                                   placeholder="Ел. пошта"
                                   name="auth-user-email"
                                   aria-label="Ел. пошта" aria-describedby="auth-email-addon" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="auth-password-addon"><i class="bi bi-lock"></i></span>
                            <input type="password"
                                   name="auth-user-password"
                                   class="form-control"
                                   placeholder="Пароль"
                                   aria-label="Пароль" aria-describedby="auth-password-addon" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="alert alert-danger" role="alert" id="auth-error" style="visibility:hidden"></div>
                    <button type="button" class="btn btn-outline-warning" data-bs-dismiss="modal">Закрити</button>
                    <button type="button" class="btn btn-outline-success" id="auth-button">Вхід</button>
                </div>
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
